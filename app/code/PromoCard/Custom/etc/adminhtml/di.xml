<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Appearance options for PromoCard_Custom -->
    <virtualType name="AppearanceSourcePromoCard" type="Magento\PageBuilder\Model\Source\VisualSelect">
        <arguments>
            <argument name="optionsSize" xsi:type="string">large</argument>
            <argument name="optionsData" xsi:type="array">
                <!-- Define one or more card styles -->
                <item name="0" xsi:type="array">
                    <item name="value" xsi:type="string">default</item>
                    <item name="title" xsi:type="string" translate="true">Default</item>
                </item>
                <item name="1" xsi:type="array">
                    <item name="value" xsi:type="string">highlight</item>
                    <item name="title" xsi:type="string" translate="true">Highlight</item>
                </item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Register JS initializer for TinyMCE / WYSIWYG -->
    <type name="Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Wysiwyg\Config">
        <arguments>
            <argument name="editors" xsi:type="array">
                <item name="mage/adminhtml/wysiwyg/tiny_mce/tinymce4Adapter" xsi:type="array">
                    <item name="component_initializers" xsi:type="array">
                        <item name="PromoCard_Custom" xsi:type="string">
                            PromoCard_Custom/js/content-type/custom-promocard/wysiwyg/tinymce4/component-initializer
                        </item>
                    </item>
                </item>
            </argument>
        </arguments>
    </type>

    <!-- Optional: virtual type tweaks for PromoCard_Custom WYSIWYG -->
    <virtualType name="Custom\PromoCard\Model\Config\ContentType\AdditionalData\Provider\Wysiwyg\PromoCardConfig"
                 type="Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Wysiwyg\Config">
        <arguments>
            <argument name="editors" xsi:type="array">
                <item name="mage/adminhtml/wysiwyg/tiny_mce/tinymce4Adapter" xsi:type="array">
                    <item name="parentSelectorsToUnderlay" xsi:type="null"/>
                </item>
            </argument>
        </arguments>
    </virtualType>

</config>
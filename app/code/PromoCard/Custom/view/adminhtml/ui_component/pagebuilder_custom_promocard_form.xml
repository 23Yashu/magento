<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_video">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_PromoCard_Custom_form.pagebuilder_PromoCard_Custom_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Promo Card List</item>
    </argument>
    <settings>
        <namespace>pagebuilder_PromoCard_Custom_form</namespace>
        <deps>
            <dep>pagebuilder_PromoCard_Custom_form.pagebuilder_PromoCard_Custom_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="pagebuilder_PromoCard_Custom_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_PromoCard_Custom_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>

    <!-- Appearance selection -->
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourcePromoCard"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>

    <!-- Promo Card List Fields -->
    <fieldset name="general" sortOrder="20">
        <settings>
            <label/>
        </settings>

        <!-- Heading -->
        <field name="heading" sortOrder="10" formElement="input">
            <settings>
                <dataScope>heading</dataScope>
                <dataType>text</dataType>
                <label translate="true">Heading</label>
            </settings>
        </field>

        <!-- Image -->
        <field name="image" sortOrder="20" formElement="imageUploader">
            <settings>
                <dataScope>image</dataScope>
                <dataType>text</dataType>
                <label translate="true">Image</label>
                <uploaderConfig>
                    <param name="url" xsi:type="url" path="cms/wysiwyg/upload"/>
                </uploaderConfig>
            </settings>
        </field>

        <!-- Description -->
        <field name="description" sortOrder="30" formElement="wysiwyg">
            <settings>
                <dataScope>description</dataScope>
                <label translate="true">Description</label>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>

        <!-- CTA Button -->
        <field name="cta_button" sortOrder="40" formElement="input">
            <settings>
                <dataScope>cta_button</dataScope>
                <dataType>text</dataType>
                <label translate="true">CTA Button</label>
            </settings>
        </field>

        <!-- CTA Label -->
        <field name="cta_label" sortOrder="50" formElement="input">
            <settings>
                <dataScope>cta_label</dataScope>
                <dataType>text</dataType>
                <label translate="true">CTA Label</label>
            </settings>
        </field>
    </fieldset>

    <fieldset name="background" sortOrder="30"/>
</form>